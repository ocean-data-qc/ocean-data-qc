{
    "name": "ocean-data-qc",
    "description": "AtlantOS Ocean Data Quality Control",
    "homepage": "https://www.atlantos-h2020.eu/",
    "main": "main.js",
    "version": "1.4.0",
    "scripts": {
        "start": "electron .",
        "start_offline": "electron . --offline",
        "clean": "node ./src/scripts/clean.js",
        "pack": "electron-builder --dir",
        "dist_mac": "electron-builder --macos",
        "dist_win": "electron-builder --win --x64",
        "dist_linux": "electron-builder --linux --x64"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ocean-data-qc/ocean-data-qc"
    },
    "publish": {
        "provider": "github"
    },
    "engines": {
        "node": ">=12.4.0",
        "npm": ">=6.11.2",
        "yarn": ">=1.17.3"
    },
    "keywords": [
        "atlantos",
        "quality",
        "whp-exchange",
        "ocean",
        "seawater",
        "bokeh"
    ],
    "author": "IIM-CSIC <jcacabelos@iim.csic.es>",
    "license": "CC0-1.0",
    "dependencies": {
        "app-module-path": "^2.2.0",
        "awesome-bootstrap-checkbox": "^1.0.1",
        "bootstrap": "^4.4.1",
        "codemirror": "^5.29.0",
        "command-exists": "^1.2.8",
        "cross-zip": "^3.1.0",
        "csv-parse": "^4.8.8",
        "datatables.net-bs4": "^1.10.20",
        "datatables.net-colreorder-bs4": "^1.5.2",
        "datatables.net-fixedheader-bs4": "^3.1.6",
        "dotenv": "^6.1.0",
        "electron-is-dev": "^1.0.1",
        "electron-updater": "^4.0.4",
        "file-url": "^2.0.2",
        "font-awesome": "^4.7.0",
        "jquery": "^3.3.4",
        "mime-db": "^1.26.0",
        "mime-type": "^3.0.5",
        "node-watch": "^0.5.4",
        "popper.js": "^1.16.0",
        "portscanner": "^2.2.0",
        "python-shell": "^0.4.0",
        "rimraf": "^2.6.1",
        "url": "^0.11.0",
        "url-exist": "^2.0.2",
        "winston": "^2.3.1",
        "xlsx": "^0.15.6"
    },
    "devDependencies": {
        "devtron": "^1.4.0",
        "electron": "=22.3.25",
        "electron-builder": "^22.7.0",
        "electron-debug": "^2.0.0"
    },
    "build": {
        "appId": "atlantos.ocean.data.qc",
        "productName": "AtlantOS Ocean Data QC",
        "copyright": "Copyright Â© 2019 ${author}",
        "files": [
            "**/*",
            "src/img/*",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
            "!**/node_modules/*.d.ts",
            "!**/node_modules/.bin",
            "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
            "!.editorconfig",
            "!**/._*",
            "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
            "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
            "!**/{appveyor.yml,.travis.yml,circle.yml}",
            "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
        ],
        "extraResources": [
            {
                "from": "../env",
                "to": "env",
                "filter": [
                    "**/*",
                    "!*.pyc",
                    "!conda-meta${/*}"
                ]
            }
        ],
        "asar": false,
        "directories": {
            "buildResources": "src/img",
            "output": "dist"
        },
        "fileAssociations": [
            {
                "ext": "aqc",
                "name": "AtlantOS Ocean Data QC File",
                "description": "AtlantOS Ocean Data QC File",
                "icon": "icon.ico"
            }
        ],
        "linux": {
            "category": "Utility",
            "synopsis": "Tool for 1st Quality Control on Hydrographic Cruise Data",
            "target": [
                "deb",
                "snap",
                "rpm",
                "appImage"
            ]
        },
        "dmg": {
            "contents": [
                {
                    "x": 110,
                    "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        }
    }
}
